{% extends '::base.html.twig' %}
{% block body %}
    {% if error is not empty %}
        <div class="alert alert-danger">{{ error.getMessage() }}</div>
    {% endif %}
    <form action="{{ path('login_check') }}" method="POST">
        <div class="form-group">
            <label for="_username">Identifiant</label>
            <input type="text" id="_username" name="_username" value="{{ lastUsername }}" />
        </div>
        <div class="form-group">
            <label for="_password">Mot de passe</label>
            <input type="password" id="_password" name="_password" value="" />
        </div>
        <div class="form-group">
            <input type="submit" name="valid" value="Valider" />
        </div>
    </form>
{% endblock %}